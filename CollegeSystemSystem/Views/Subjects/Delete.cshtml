@model CollegeSystemSystem.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h1>Are you sure you want to delete this?</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>

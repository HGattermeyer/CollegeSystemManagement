@model CollegeSystemSystem.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>
</div>

<table class="table">
        <thead>
            <tr>
                <th>
                    Subjects Name
                </th>
                <th>
                    Student
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Student student in Model.Students)
            {
                @foreach(Subject subject in student.Course.Subjects){
                <tr>

                    <td>
                        @subject.SubjectName
                    </td>
                    <td>
                        @student.Name
                    </td>

                </tr>
                }
            }
        </tbody>
    </table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
